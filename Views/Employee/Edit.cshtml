@model EmployeeManagementSystem.Models.Domain.Employee

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Employee Information</h4>
<hr />
<div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
           
            <div class="form-group">
                <label asp-for="Frist_Name" class="control-label"></label>
                <input asp-for="Frist_Name" class="form-control" />
                <span asp-validation-for="Frist_Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Last_Name" class="control-label"></label>
                <input asp-for="Last_Name" class="form-control" />
                <span asp-validation-for="Last_Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Date_of_Birth" class="control-label"></label>
                <input asp-for="Date_of_Birth" class="form-control" />
                <span asp-validation-for="Date_of_Birth" class="text-danger"></span>
            </div>
            <div class="form-group text-right">
                <a class="btn btn-outline-info" asp-action="Index">Back to List</a>
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
    <div class="col-md-4"></div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
